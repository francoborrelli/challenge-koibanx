{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "target": "ES2021",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["**/src/**/*"]
}
